{
  "name": "express-mvc-boilerplate",
  "license": "MIT",
  "author": "Daniel Medina",
  "version": "1.0.0",
  "description": "Express boilerplate with an MVC architecture.",
  "repository": "https://github.com/daniel-medina/express-mvc-boilerplate",
  "main": "main.js",
  "scripts": {
    "start": "./node_modules/.bin/standard && ./node_modules/.bin/cross-env NODE_ENV=development ./node_modules/.bin/webpack-dashboard -- ./node_modules/babel-cli/bin/babel-node.js main.js --presets es2015,stage-2",
    "test": "npm run test:backend && npm run test:end-to-end",
    "test:backend": "./node_modules/.bin/mocha ./test/backend.js",
    "gulp": "gulp sass-compile && gulp",
    "compile": "rm -rf ./build && ./node_modules/.bin/cross-env NODE_ENV=production ./node_modules/.bin/webpack --config ./config/webpack.config.js && ./node_modules/.bin/babel ./ --out-dir build --ignore 'node_modules',./public/assets/content.js --copy-files --no-comments && cp ./public/assets/content.js ./build/public/assets/content.js"
  },
  "standard": {
    "ignore": [
      "public/assets/content.js"
    ]
  },
  "dependencies": {
    "axios": "^0.17.1",
    "bcrypt": "^1.0.3",
    "bootstrap-sass": "^3.3.7",
    "busboy-body-parser": "^0.3.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "escape-html": "^1.0.3",
    "express": "^4.16.2",
    "express-busboy": "^6.0.1",
    "express-fileupload": "^0.3.0",
    "express-session": "^1.15.6",
    "fs-extra": "^4.0.2",
    "memorystore": "^1.6.0",
    "minimatch": "^3.0.4",
    "mongodb": "^2.2.33",
    "mongoose": "^4.13.5",
    "multer": "^1.3.0",
    "pug": "^2.0.0-rc.4",
    "slug": "^0.9.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "gulp": "^3.9.1",
    "gulp-sass": "^3.1.0",
    "html-webpack-plugin": "^2.30.1",
    "mocha": "^4.0.1",
    "nightwatch": "^0.9.16",
    "resolve-url": "^0.2.1",
    "sass-loader": "^6.0.6",
    "standard": "^10.0.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dashboard": "^1.0.2",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.9.4",
    "webpack-hot-middleware": "^2.20.0"
  }
}
